{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "2.0.5",
  "author": "YUKI \"Piro\" Hiroshi",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "bookmarks",
    "clipboardWrite",
    "contextMenus",
    "downloads",
    "notifications",
    "sessions",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "resources/16x16-light.svg",
    "20": "resources/20x20-light.svg",
    "24": "resources/24x24-light.svg"
  },
  "background": {
    "scripts": [
      "common/constants.js",
      "common/Configs.js",
      "common/common.js",
      "common/commands.js",
      "common/drag-selection.js",
      "common/TabFavIconHelper.js",
      "background/background.js",
      "background/context-menu.js"
    ]
  },
  "browser_action": {
    "default_title": "__MSG_panelTitle__",
    "default_icon": {
      "16": "resources/16x16-light.svg",
      "20": "resources/20x20-light.svg",
      "24": "resources/24x24-light.svg"
    },
    "browser_style": true,
    "default_popup": "panel/panel.html",
    "theme_icons": [
      {
        "light": "resources/16x16-dark.svg",
        "dark":  "resources/16x16-light.svg",
        "size": 16
      },
      {
        "light": "resources/20x20-dark.svg",
        "dark":  "resources/20x20-light.svg",
        "size": 20
      },
      {
        "light": "resources/24x24-dark.svg",
        "dark":  "resources/24x24-light.svg",
        "size": 24
      }
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "multipletab@piro.sakura.ne.jp",
      "strict_min_version": "57.0a1"
    }
  }
}
